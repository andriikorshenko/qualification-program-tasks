@model Book
@{
    ViewData["Title"] = "Details";
}

<form>
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Details</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="PageQty"></label>
            <input asp-for="PageQty" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" disabled class="form-control">
        </div>
        <div class="mb-3">
            <label>by</label>
                @foreach (var item in Model.Authors)
                {
                    @item
                }
        </div>
        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-x-circle"></i> &nbsp; Back
        </a>
    </div>
</form>